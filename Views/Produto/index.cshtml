@model IEnumerable<MeuProjetoBackend.Models.Produto>

@{
    ViewData["Title"] = "Produtos";
}

<h1>Lista de Produtos</h1>

<a href="@Url.Action("Create")" class="btn btn-primary">Criar Produto</a>

<table class="table mt-3">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Preço</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var produto in Model)
        {
            <tr>
                <td>@produto.Id</td>
                <td>@produto.Nome</td>
                <td>@produto.Preco.ToString("C")</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = produto.Id })" class="btn btn-warning">Editar</a>
                    <a href="@Url.Action("Delete", new { id = produto.Id })" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
